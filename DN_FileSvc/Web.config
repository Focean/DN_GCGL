<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
    </configSections>
    <appSettings>
      <add key="UploadFilePath" value ="D:\DN_GCGL\Publish\UploadFiles\" />
    </appSettings>
    <log4net>
        <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
            </layout>
        </appender>
        <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
            <!--定义文件存放位置-->
          <file value="log4netfile.txt" />
          <appendToFile value="true" />
            <rollingStyle value="Date" />
            <datePattern value="yyyyMMdd-HH:mm:ss" />
            <layout type="log4net.Layout.PatternLayout">
                <!--每条日志末尾的文字说明-->
                <footer value="by FJW" />
                <!--输出格式-->
                <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
                <conversionPattern value="记录时间：%date 线程ID:[%thread] 日志级别：%-5level 出错类：%logger property:[%property{NDC}] - 错误描述：%message%newline" />
            </layout>
        </appender>

        <root>
            <level value="ALL"/>
            <appender-ref ref="EventLogAppender"/>
            <appender-ref ref="LogFileAppender"/>
        </root>
        <logger name="EventLogAppender">
            <level value="All"/>
            <appender-ref ref="EventLogAppender"/>
        </logger>
        <logger name="LogFileAppender">
            <level value="All"/>
            <appender-ref ref="LogFileAppender"/>
        </logger>
    </log4net>
    <system.web>
        <compilation debug="true" targetFramework="4.0" />
        <httpRuntime maxRequestLength="999999999" />
    </system.web>
    <system.serviceModel>
        <bindings>
          <netTcpBinding>
            <binding name="netTcpConfig" transferMode="Streamed" maxReceivedMessageSize="1073741824">
              <security mode="None" />
            </binding>
          </netTcpBinding>
              <!-- 大数据量提交配置1 注：客户端需要在Bings\basicHttpBinding对相关属性开最大值-->
            <basicHttpBinding>
              <binding name="LargeDataTransferServicesBinding" sendTimeout="00:30:00"
                  maxBufferSize="999999999" maxReceivedMessageSize="999999999"
                  transferMode="Streamed" messageEncoding="Mtom">
                <readerQuotas maxStringContentLength="999999999" />
              </binding>
            </basicHttpBinding>
            <!-- 大数据量提交配置1-->
        </bindings>
        
        <services>
          <service name="WcfFileTransferService.FileTransfer">
            <endpoint address="" binding="netTcpBinding" bindingConfiguration="netTcpConfig" contract="WcfFileTransferInterface.IFileTransfer"/>
            <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"/>
          </service>

        </services>
        <behaviors>
            <serviceBehaviors>
                <behavior>
                    <!-- 为避免泄漏元数据信息，请在部署前将以下值设置为 false 并删除上面的元数据终结点 -->
                    <serviceMetadata httpGetEnabled="true"/>
                    <!-- 要接收故障异常详细信息以进行调试，请将以下值设置为 true。在部署前设置为 false 以避免泄漏异常信息 -->
                    <serviceDebug includeExceptionDetailInFaults="true"/>
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
    </system.serviceModel>

    <connectionStrings>
        <add name="Connect_FileSvc" connectionString="Data Source=127.0.0.1;Initial Catalog=DN_GCGL;User ID=sa;Password=fjw" providerName="System.Data.SqlClient"/>
    </connectionStrings>
    <system.webServer>
        <modules runAllManagedModulesForAllRequests="true"/>
    </system.webServer>

</configuration>
